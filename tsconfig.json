{
  "compilerOptions": {
      "target": "es5",
      "lib": ["es6"],
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true ,
      "typeRoots": ["src/@types", "./node_modules/@types"], 
      "outDir": "build",                          /* Redirect output structure to the directory. */
      "rootDir": "src",
      
  },
  "include": [
    "./src/ts/**/*"
  ]
  
}